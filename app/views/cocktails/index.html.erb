<div class="container">
  <div class="row">
      <% @cocktails.each do |cocktail| %>
      <div class="cards">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/500x400/?cocktail)">
          <%= link_to cocktail.name, cocktail_path(cocktail)%>
        </div>
      <% end %>
    </div>
  </div>
  <div><%= link_to "Create a cocktail", new_cocktail_path %>
</div>
</div>




